@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="jumbotron">
  <h1>Add new Engineer here!</h1>
</div>
<hr />
@using (Html.BeginForm())
{
  @Html.Label("Engineer Name:")
  @Html.TextBoxFor(model => model.Name, new { required = "required" })
  <br>
  @Html.Label("Engineer License Renewal Date:")
  @Html.TextBoxFor(model => model.Date, new { type = "date", required = "required" })
  <br>
  <input type="submit" value="Add Engineer" />
}