@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Engineer>;

<div class="jumbotron">
  <h1>All Avaliable Engineers</h1>
</div>
<hr />
@if (@Model.Count == 0)
{
  <h3>No Engineers are avaliable. We need to employ more people!</h3>
}
@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>  
}
<hr />
<button class="btn">@Html.ActionLink("Add New Engineer", "Create")</button>