@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="jumbotron">
  <h1>Add Machine</h1>
</div>
<hr />
@using (Html.BeginForm())
{
  @Html.Label("Machine Name:")
  @Html.TextBoxFor(model => model.Name, new { required = "required" })
  <br>
  @Html.Label("Machine Service Date:")
  @Html.TextBoxFor(model => model.Date, new { type = "date", required = "required" })
  <br>
  <input type="submit" value="Add Machine" />
}